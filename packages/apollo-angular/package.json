{
  "name": "apollo-angular",
  "description": "Use your GraphQL data in your Angular app, with the Apollo Client",
  "version": "4.0.2",
  "author": {
    "name": "Kamil Kisiela",
    "email": "kamil.kisiela@gmail.com",
    "url": "https://github.com/kamilkisiela/"
  },
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "module": "build/fesm2020/ngApollo.mjs",
  "typings": "build/index.d.ts",
  "homepage": "https://www.apollo-angular.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamilkisiela/apollo-angular",
    "directory": "packages/apollo-angular"
  },
  "keywords": [
    "apollo",
    "graphql",
    "angular",
    "schematics",
    "angular-schematics"
  ],
  "scripts": {
    "build": "ng-packagr -p ng-package.json && yarn build:schematics",
    "build:schematics": "tsc -p schematics/tsconfig.json && node ./scripts/move-schematics.js",
    "test": "NODE_OPTIONS=--experimental-modules jest --config jest.config.js",
    "prebuild": "rm -rf build/",
    "deploy": "yarn build && npm publish build",
    "deploy:next": "yarn build && npm publish build --tag next"
  },
  "peerDependencies": {
    "@angular/core": "^14.0.0",
    "@apollo/client": "^3.0.0",
    "graphql": "^15.0.0 || ^16.0.0",
    "rxjs": "^6.0.0 || ^7.0.0",
    "zone.js": ">=0.10.0 <0.12.0"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "schematics": "./schematics/collection.json",
  "ng-update": {
    "requirements": {},
    "migrations": "./schematics/migrations.json",
    "packageGroupName": "apollo-angular",
    "packageGroup": [
      "apollo-angular",
      "@apollo/client",
      "graphql"
    ]
  }
}
